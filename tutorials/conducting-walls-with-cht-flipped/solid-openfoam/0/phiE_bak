FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      phiE;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 2 -3 0 0 -1 0];

internalField   uniform 0.5;

boundaryField
{
    "(inlet|outlet|bot_surf|top_surf|ext_walls|)" //right_int|left_int)"
    {
        type            zeroGradient;
    }
    top_int
    {
        type            fixedGradient;
	gradient	uniform 0.0;
        //value           uniform 0.0;
    }
    bot_int
    {
        type            fixedValue;
        value           $internalField; //uniform 1.0;
    }
    left_int
    {
        type            fixedGradient;
	gradient	uniform 0.0;
        //value           $internalField; //uniform 0.5;
    }
    right_int
    {
        type            fixedValue;
        value           $internalField; //uniform 0.5;
    }
}


